<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TabHost
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/tabHost">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"></TabWidget>

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:id="@+id/tab1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <ScrollView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/scrollView"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true" >

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent">

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:background="#FFB7B7B7">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceLarge"
                                    android:text="Card Values"
                                    android:id="@+id/textView8"
                                    android:layout_below="@+id/scrollView"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignEnd="@+id/jokerLabel" />
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceLarge"
                                    android:text="Joker (50pts)"
                                    android:id="@+id/jokerLabel"
                                    android:layout_toStartOf="@+id/scrollView"
                                    android:textAlignment="center"
                                    android:layout_below="@+id/textView8"
                                    android:layout_alignParentStart="true"
                                    android:width="210dp" />

                                <EditText
                                    android:layout_width="131dp"
                                    android:layout_height="wrap_content"
                                    android:inputType="number"
                                    android:ems="10"
                                    android:id="@+id/inputJokerPoints"
                                    android:layout_toEndOf="@+id/scrollView"
                                    android:layout_above="@+id/redThreeLabel"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignTop="@+id/jokerLabel"
                                    android:text="0" />
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/linearLayout">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceLarge"
                                    android:text="Aces &amp; Twos (20pts)"
                                    android:id="@+id/acesTwosLabel"
                                    android:layout_toStartOf="@+id/scrollView"
                                    android:textAlignment="center"
                                    android:layout_below="@+id/textView8"
                                    android:layout_alignParentStart="true"
                                    android:width="210dp" />

                                <EditText
                                    android:layout_width="131dp"
                                    android:layout_height="wrap_content"
                                    android:inputType="number"
                                    android:ems="10"
                                    android:id="@+id/inputAcesTwosPoints"
                                    android:layout_toEndOf="@+id/scrollView"
                                    android:layout_above="@+id/redThreeLabel"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignTop="@+id/textView3"
                                    android:text="0" />
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/linearLayout2">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceLarge"
                                    android:text="8 - K (10pts)"
                                    android:id="@+id/highCardLabel"
                                    android:layout_toStartOf="@+id/scrollView"
                                    android:textAlignment="center"
                                    android:layout_below="@+id/textView8"
                                    android:layout_alignParentStart="true"
                                    android:width="210dp" />

                                <EditText
                                    android:layout_width="131dp"
                                    android:layout_height="wrap_content"
                                    android:inputType="number"
                                    android:ems="10"
                                    android:id="@+id/inputHighPoints"
                                    android:layout_toEndOf="@+id/scrollView"
                                    android:layout_above="@+id/redThreeLabel"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignTop="@+id/textView4"
                                    android:text="0" />
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/linearLayout3">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceLarge"
                                    android:text="4 - 7 (5pts)"
                                    android:id="@+id/lowCardLabel"
                                    android:layout_toStartOf="@+id/scrollView"
                                    android:textAlignment="center"
                                    android:layout_below="@+id/textView8"
                                    android:layout_alignParentStart="true"
                                    android:width="210dp" />

                                <EditText
                                    android:layout_width="131dp"
                                    android:layout_height="wrap_content"
                                    android:inputType="number"
                                    android:ems="10"
                                    android:id="@+id/inputLowPoints"
                                    android:layout_toEndOf="@+id/scrollView"
                                    android:layout_above="@+id/redThreeLabel"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignTop="@+id/textView5"
                                    android:text="0" />
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/linearLayout4">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceLarge"
                                    android:text="Black 3's (-300pts)"
                                    android:id="@+id/blackThreeLabel"
                                    android:layout_toStartOf="@+id/scrollView"
                                    android:textAlignment="center"
                                    android:layout_below="@+id/textView8"
                                    android:layout_alignParentStart="true"
                                    android:width="210dp" />

                                <EditText
                                    android:layout_width="131dp"
                                    android:layout_height="wrap_content"
                                    android:inputType="number"
                                    android:ems="10"
                                    android:id="@+id/inputBlackThreePoints"
                                    android:layout_toEndOf="@+id/scrollView"
                                    android:layout_above="@+id/redThreeLabel"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignTop="@+id/textView6"
                                    android:text="0" />
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/linearLayout5">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceLarge"
                                    android:text="Red 3's (-500pts)"
                                    android:id="@+id/redThreeLabel"
                                    android:layout_toStartOf="@+id/scrollView"
                                    android:textAlignment="center"
                                    android:layout_below="@+id/textView8"
                                    android:layout_alignParentStart="true"
                                    android:width="210dp" />

                                <EditText
                                    android:layout_width="131dp"
                                    android:layout_height="wrap_content"
                                    android:inputType="number"
                                    android:ems="10"
                                    android:id="@+id/inputRedThreePoints"
                                    android:layout_toEndOf="@+id/scrollView"
                                    android:layout_above="@+id/redThreeLabel"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignTop="@+id/redThreeLabel"
                                    android:text="0" />
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/linearLayout7"
                                android:background="#ffb7b7b7">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceLarge"
                                    android:text="Bonus Points"
                                    android:id="@+id/textView10"
                                    android:layout_toStartOf="@+id/scrollView"
                                    android:textAlignment="center"
                                    android:layout_below="@+id/textView8"
                                    android:layout_alignParentStart="true" />

                            </LinearLayout>

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/linearLayout6" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceLarge"
                                    android:text="Clean Pile (500pts)"
                                    android:id="@+id/cleanLabel"
                                    android:layout_toStartOf="@+id/scrollView"
                                    android:textAlignment="center"
                                    android:layout_below="@+id/textView8"
                                    android:layout_alignParentStart="true"
                                    android:width="210dp" />

                                <EditText
                                    android:layout_width="131dp"
                                    android:layout_height="wrap_content"
                                    android:inputType="number"
                                    android:ems="10"
                                    android:id="@+id/inputCleanPoints"
                                    android:layout_toEndOf="@+id/scrollView"
                                    android:layout_above="@+id/textView4"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignTop="@+id/textView4"
                                    android:text="0" />
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/linearLayout10" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceLarge"
                                    android:text="Dirty Pile (300pts)"
                                    android:id="@+id/dirtyLabel"
                                    android:layout_toStartOf="@+id/scrollView"
                                    android:textAlignment="center"
                                    android:layout_below="@+id/textView8"
                                    android:layout_alignParentStart="true"
                                    android:width="210dp" />

                                <EditText
                                    android:layout_width="131dp"
                                    android:layout_height="wrap_content"
                                    android:inputType="number"
                                    android:ems="10"
                                    android:id="@+id/inputDirtyPoints"
                                    android:layout_toEndOf="@+id/scrollView"
                                    android:layout_above="@+id/outputScoreLabel"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignTop="@+id/outputScoreLabel"
                                    android:text="0" />
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/linearLayout11" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceLarge"
                                    android:text="Wild Pile (1500pts)"
                                    android:id="@+id/wildLabel"
                                    android:layout_toStartOf="@+id/scrollView"
                                    android:textAlignment="center"
                                    android:layout_below="@+id/textView8"
                                    android:layout_alignParentStart="true"
                                    android:width="210dp" />

                                <EditText
                                    android:layout_width="131dp"
                                    android:layout_height="wrap_content"
                                    android:inputType="number"
                                    android:ems="10"
                                    android:id="@+id/inputWildPoints"
                                    android:layout_toEndOf="@+id/scrollView"
                                    android:layout_above="@+id/textView11"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignTop="@+id/textView11"
                                    android:text="0" />
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/linearLayout13" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceLarge"
                                    android:text="Going Out (100pts)"
                                    android:id="@+id/goingOutLabel"
                                    android:layout_toStartOf="@+id/scrollView"
                                    android:textAlignment="center"
                                    android:layout_below="@+id/textView8"
                                    android:layout_alignParentStart="true"
                                    android:width="210dp" />

                                <EditText
                                    android:layout_width="131dp"
                                    android:layout_height="wrap_content"
                                    android:inputType="number"
                                    android:ems="10"
                                    android:id="@+id/inputGoingOutPoints"
                                    android:layout_toEndOf="@+id/scrollView"
                                    android:layout_above="@+id/textView13"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignTop="@+id/textView13"
                                    android:text="0" />
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/linearLayout14" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceLarge"
                                    android:text="PLUS"
                                    android:id="@+id/plusLabel"
                                    android:layout_toStartOf="@+id/scrollView"
                                    android:textAlignment="center"
                                    android:layout_below="@+id/textView8"
                                    android:layout_alignParentStart="true"
                                    android:width="210dp" />

                                <EditText
                                    android:layout_width="131dp"
                                    android:layout_height="wrap_content"
                                    android:inputType="number"
                                    android:ems="10"
                                    android:id="@+id/inputPlusPoints"
                                    android:layout_toEndOf="@+id/scrollView"
                                    android:layout_above="@+id/textView14"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignTop="@+id/textView14"
                                    android:text="0" />
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/linearLayout16" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceLarge"
                                    android:text="MINUS"
                                    android:id="@+id/minusLabel"
                                    android:layout_toStartOf="@+id/scrollView"
                                    android:textAlignment="center"
                                    android:layout_below="@+id/textView8"
                                    android:layout_alignParentStart="true"
                                    android:width="210dp" />

                                <EditText
                                    android:layout_width="131dp"
                                    android:layout_height="wrap_content"
                                    android:inputType="number"
                                    android:ems="10"
                                    android:id="@+id/inputMinusPoints"
                                    android:layout_toEndOf="@+id/scrollView"
                                    android:layout_above="@+id/textView16"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignTop="@+id/textView16"
                                    android:text="0" />
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/linearLayout17"
                                android:background="#ffb7b7b7" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceLarge"
                                    android:text="Total Score"
                                    android:id="@+id/textView4"
                                    android:layout_toStartOf="@+id/scrollView"
                                    android:textAlignment="center"
                                    android:layout_below="@+id/textView8"
                                    android:layout_alignParentStart="true" />
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/linearLayout18" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceLarge"
                                    android:id="@+id/outputScoreLabel"
                                    android:layout_toStartOf="@+id/scrollView"
                                    android:textAlignment="center"
                                    android:layout_below="@+id/textView8"
                                    android:layout_alignParentStart="true"
                                    android:textStyle="bold"
                                    android:textSize="24dp"
                                    android:textIsSelectable="true"
                                    android:text="0" />

                            </LinearLayout>
                        </LinearLayout>
                    </ScrollView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tab2"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"></LinearLayout>

                <LinearLayout
                    android:id="@+id/tab3"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"></LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </TabHost>

</RelativeLayout>